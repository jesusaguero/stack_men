<div class="container" style="margin-top: 70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Clientes</h3>
        {{#if clientes}}
        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-4">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Nro. DNI</th>
                    <th scope="col">Nro. Telefono</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each clientes}}
                <tr>
                    <td>{{nomcli}}</td>
                    <td>{{apecli}}</td>
                    <td>{{nrodnicli}}</td>
                    <td>{{nrotelefonocli}}</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                <i class="fa-solid fa-pencil"></i> Actualizar
                            </a>
                            <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                <i class="fa-solid fa-trash"></i> Eliminar
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="5">REGISTRO DE CLIENTES</td>
                </tr>
            </tfoot>
        </table>
        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>Debes crear una persona</h3>
            </div>
            <div class="card-body">
                <p>Presiona este botón para que puedas registrar a una persona en la aplicación</p>
                <a href="#" class="btn btn-primary">Ir a crear</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>
